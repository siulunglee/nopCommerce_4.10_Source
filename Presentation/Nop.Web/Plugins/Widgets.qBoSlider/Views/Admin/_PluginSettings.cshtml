@model ConfigurationModel
@using Nop.Plugin.Widgets.qBoSlider.Models;

<form asp-controller="qBoSlider" asp-action="Configure"  method="post">
    @await Component.InvokeAsync("StoreScopeConfiguration")
    @Html.AntiForgeryToken()

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="WidgetZoneName" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="WidgetZoneName" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ArrowNavigation" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="ArrowNavigation" asp-items="@Model.AvailableArrowNavigations" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="BulletNavigation" />
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="BulletNavigation" asp-items="@Model.AvailableBulletNavigations" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AutoPlay" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AutoPlay" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AutoPlayInterval" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AutoPlayInterval" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="SlideDuration" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SlideDuration" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="MinDragOffsetToSlide" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MinDragOffsetToSlide" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="SlideSpacing" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SlideSpacing" />
                    </div>
                </div>

            </div>
            <div class="panel-footer">
                <button type="submit" class="btn bg-blue">
                    <i class="fa fa-floppy-o"></i>
                    @T("Admin.Common.Save")
                </button>
            </div>
        </div>
    </div>
</form>